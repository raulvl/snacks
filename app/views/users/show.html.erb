<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     	<span class="avatar"><%= link_to image_tag(@user.avatar.url, class: 'media-object img-circle user_photo_profile_feed'), current_user%>
</span>				
      <h3> <%= @user.name %> </h3>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </section>
  </aside>
	<div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.reviews.any? %>
      <h3>Reviews (<%= @user.reviews.count %>)</h3>
      <ol class="microposts">
        <%= render @reviews_user %>
      </ol>
      <%= will_paginate @reviews_user %>
    <% end %>
  </div>
</div>

