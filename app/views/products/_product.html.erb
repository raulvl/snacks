<div class="col-sm-6 col-md-4">
  <div class="thumbnail-product" style="min-height:350px;height:350px;">
    <%= image_tag product.image.url, class: "img-circle", style: "height: 100px; width: 100px" %>
    <div class="caption">
      <h3><%= link_to product.name, product %></h3>
      <p><%= link_to Category.find(product.category_id).name, category_path(product.category_id)%></p>
      <div class="product_desc">
        <span class=""><%= product.desc %></span>
  	    <% if current_user.admin? %>
  	 	 		<p><%= link_to "Edit", edit_product_path(product), class: "btn btn-default glyphicon glyphicon-edit " %>
  		 		<%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default glyphicon glyphicon-remove" %></p>
  		  <% end %>
      </div>	
    </div>
  </div>
</div>
