<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  
    <%= f.label :desc %><br>
    <%= f.text_area :desc, class: 'form-control' %>
 
    <%= f.label :brand %><br>
    <%= f.text_field :brand, class: 'form-control' %>
  
    <%= f.label :category_id %><br>
    <%= select_tag(:category_id, options_for_select(@categories), class: 'form-control', :prompt => "Select one!") %>

    <%= f.label :image %>
    <%= image_tag @product.image.thumb.url, class: "img-circle" %>
   <%= f.file_field :image, class: 'form-control' %>
 
    <%= f.submit "Create Product", class: "btn btn-primary"%>
  </div>
</div>
<% end %>
